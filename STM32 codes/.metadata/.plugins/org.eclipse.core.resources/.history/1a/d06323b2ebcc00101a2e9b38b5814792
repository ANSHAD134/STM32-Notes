#include <stdio.h>
#include <stdint.h>
#include "stm32_f446xx.h"
#include "LM35_ADC.h"
#define ADC_PIN	    0


int main(void)
{
	uint32_t ADON;
	GPIOA_CLK_EN();										// Enable GPIOA Clock
	ADC1_CLK_EN();										// Enable ADC1 Clock

	GPIOA->MODER &= ~(0x3 << (ADC_PIN*2));				// Clear mode bits for PA0
	GPIOA->MODER |= (0x3 << (ADC_PIN*2));				// Set PA0 as Analog Mode
	GPIOA->PUPDR &= ~(0x3 << (ADC_PIN*2));				// No pull-up/pull-down for PA0

	//ADC REGISTERS
	ADC1->CR2 &= ~(ADC_CR2_ADON);						// Disable ADC conversion and go to power down mode
	ADC1->CR1 &= ~(ADC_CR1_RES);						// Set 12-bit (minimum 15 ADCCLK cycles)
	ADC1->CR2 &= ~(ADC_CR2_ALIGN);						// Set Right alignment
	ADC1->CR2 &= ~(ADC_CR2_CONT);						// Set Single conversion mode
	ADC1->SQR3 = 0;										// Channel 0 is first conversion
	ADC1->SQR1 = 0;										// Only 1 conversion
	ADC1->SMPR2 |= (0x5 << (0 * 3));					// Channel 0 sampling time = 28 cycles
	ADC1->CR2 |= (ADC_CR2_ADON);						// Enable ADC


	while(1)
{
	ADC1->CR2 |= (ADC_CR2_SWSTART);						// Start conversion
	while(!(ADC1->SR & ADC_SR_EOC));  					// End of conversion
	uint16_t adc_value = ADC1->ADC_DR;						// Read ADC Value
	float voltage = (adc_value * 3.3f) / 4095.0f;
	float tempC = voltage * 100;   						// 10mV per Â°C

	printf("Temperature = %.2f C\n", tempC);
}

}
