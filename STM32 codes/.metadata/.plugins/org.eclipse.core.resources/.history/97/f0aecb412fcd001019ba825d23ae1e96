#include <stdio.h>
#include <stdint.h>
#include "stm32_f446xx.h"
#include "LM35_ADC.h"
#define ADC_PIN	    0

void delay(volatile uint32_t count)
{
    while(count--);
}


int main(void)
{
	GPIOA_CLK_EN();											// Enable GPIOA Clock
	ADC1_CLK_EN();											// Enable ADC1 Clock

	GPIOA->MODER &= ~(0x3 << (ADC_PIN*2));					// Clear mode bits for PA0
	GPIOA->MODER |= (0x3 << (ADC_PIN*2));					// Set PA0 as Analog Mode
	GPIOA->PUPDR &= ~(0x3 << (ADC_PIN*2));					// No pull-up/pull-down for PA0

	//ADC REGISTERS
	ADC1->ADC_CR2 &= ~(1 << 0);								// Disable ADC conversion and go to power down mode
	ADC1->ADC_CR1 &= ~(3 << 24);							// Set 12-bit (minimum 15 ADCCLK cycles)
	ADC1->ADC_CR2 &= ~(1 << 11);							// Set Right alignment
	ADC1->ADC_CR2 &= ~(1 << 1);								// Set Single conversion mode
	ADC1->ADC_SQR1 = 0;										// Channel 0 is first conversion
	ADC1->ADC_SQR3 = 0;										// Only 1 conversion
	ADC1->ADC_SMPR2 |= (3 << 0);							// Channel 0 sampling time = 28 cycles
	ADC1->ADC_CR2 |= (1 << 0);								// Enable ADC
	delay(50000);               							// ADC stabilization delay

	while(1)
{
	ADC1->ADC_CR2 |= (1 << 30);								// Start conversion
	while(!(ADC1->ADC_SR & (1 << 1)));  					// Wait for End of conversion
	uint16_t adc_value = ADC1->ADC_DR;						// Read ADC Value
	float voltage = (adc_value * 3.3f) / 4095.0f;
	float tempC = voltage * 100.0f;   						// 10mV per Â°C

	for(int i=0; i<=15; i++){
	printf("Temperature = %.2f C\n", tempC);
	for (volatile int i = 0; i < 100000; i++);				// small delay
	}
}
}
